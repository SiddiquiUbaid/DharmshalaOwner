<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dhaaramshalaown.Fragments.ordersList">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtOrdersList"
            android:layout_above="@+id/id_recyclerViewForOrderList"
            android:padding="15dp"
            android:text="Orders list"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="3dp"
            android:background="@color/grey"
            />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recyclerViewForOrderList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/main_layout_background"
        android:paddingHorizontal="3dp"

        />

    </LinearLayout>


</FrameLayout>